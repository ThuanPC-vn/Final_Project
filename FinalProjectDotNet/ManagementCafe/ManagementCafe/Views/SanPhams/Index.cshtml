@model IEnumerable<ManagementCafe.Models.SanPham>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
	int i = 0;
}

<h2>Index</h2>

<p>
	@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table">
	<tr>
		<th>
			STT
		</th>
		<th>
			Tên Sản Phẩm
		</th>
		<th>
			Giá
		</th>
		<th>
			Mô Tả
		</th>
		<th>
			Hình ảnh
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model) {
		<tr>
			<td>
				@{i++;}
				@i
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.TenSanPham)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Gia)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.MoTa)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.HinhAnh)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id = item.SanPhamID }, new { @class = "btn btn-secondary" }) |
				@Html.ActionLink("Details", "Details", new { id = item.SanPhamID }, new { @class = "btn btn-info" }) |
				@Html.ActionLink("Delete", "Delete", new { id = item.SanPhamID }, new { @class = "btn btn-danger" })
			</td>
		</tr>
	}

</table>

<div class="d-flex justify-content-between align-items-center">
	<nav aria-label="Page navigation">
		<ul class="pagination">
			@for (int pageIndex = 1; pageIndex <= ViewBag.TotalPages; pageIndex++)
			{
				<li class="page-item @(pageIndex == ViewBag.CurrentPage ? "active" : "")">
					@Html.ActionLink(pageIndex.ToString(), "Index", new { page = pageIndex }, new { @class = "page-link" })
				</li>
			}
		</ul>
	</nav>
</div>