@model IEnumerable<ManagementCafe.Models.ChiTietHoaDon>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Hóa Đơn ID
        </th>
        <th>
            Số Lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Thành Tiền
        </th>
        <th>
            Nhân Viên Order
        </th>
        <th>
            Tên Sản Phẩm
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ChiTietHoaDonID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoaDonID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThanhTien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoaDon.NhanVienID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SanPham.TenSanPham)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ChiTietHoaDonID }, new { @class = "btn btn-secondary" }) |
                @Html.ActionLink("Details", "Details", new { id = item.ChiTietHoaDonID }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ChiTietHoaDonID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

<div class="d-flex justify-content-between align-items-center">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @for (int pageIndex = 1; pageIndex <= ViewBag.TotalPages; pageIndex++)
            {
                <li class="page-item @(pageIndex == ViewBag.CurrentPage ? "active" : "")">
                    @Html.ActionLink(pageIndex.ToString(), "Index", new { page = pageIndex }, new { @class = "page-link" })
                </li>
            }
        </ul>
    </nav>
</div>
