@model IEnumerable<_23TH2508_Final_Project.Models.HoaDon>

@{
    ViewBag.Title = "Advanced Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tìm kiếm chi tiết</h2>

<form method="GET" action="@Url.Action("TimKiem_HD_KQ")" class="mb-4">
    <table class="table table-bordered" style="background-color: #f9f9f9;">
        <tbody>
            <tr>
                <td>
                    <div class="form-group">
                        <label for="searchID">ID Hóa Đơn</label>
                        <input type="text" class="form-control" id="searchID" name="searchID" placeholder="Nhập ID hóa đơn">
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <label for="searchDateFrom">Ngày Lập Từ</label>
                        <input type="date" class="form-control" id="searchDateFrom" name="searchDateFrom">
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label for="searchDateTo">Đến</label>
                        <input type="date" class="form-control" id="searchDateTo" name="searchDateTo">
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <label for="searchTimeFrom">Thời Gian Lập Từ</label>
                        <input type="time" class="form-control" id="searchTimeFrom" name="searchTimeFrom">
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label for="searchTimeTo">Đến</label>
                        <input type="time" class="form-control" id="searchTimeTo" name="searchTimeTo">
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <label for="searchAmountFrom">Tổng Tiền Từ</label>
                        <input type="number" class="form-control" id="searchAmountFrom" name="searchAmountFrom" placeholder="Nhập số tiền">
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label for="searchAmountTo">Đến</label>
                        <input type="number" class="form-control" id="searchAmountTo" name="searchAmountTo" placeholder="Nhập số tiền">
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Tìm kiếm</button>
</form>

<table class="table">
    <tr>
        <th>
            Hóa đơn ID
        </th>
        <th>
            Ngày lập
        </th>
        <th>
            Thời gian lập
        </th>
        <th>
            Tổng Tiền
        </th>
        <th>
            Khách Hàng
        </th>
        <th>
            Nhân Viên Order
        </th>
        <th></th>
    </tr>

    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HoaDonID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayLap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThoiGianLap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TongTien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KhachHang.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NhanVien.HoTen)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.HoaDonID }, new { @class = "btn btn-secondary" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.HoaDonID }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.HoaDonID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    }
</table>

<div class="text-end mt-4">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</div>
