@model _23TH2508_Final_Project.Models.NhanVien

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string gtinh = "";
}

<section class="min-vh-50" style="background-color: #f4f5f7;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-6 mb-4 mb-lg-0">
                <div class="card mb-3" style="border-radius: .5rem; background-color: black;">
                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center text-white"
                             style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                            <img src="/Images/@Html.DisplayFor(model => model.AnhNV)"
                                 alt="Avatar" class="img-fluid my-5 rounded-circle" style="width: 80px;" />
                            <h5>@Html.DisplayFor(model => model.HoTen)</h5>
                            <p>Chức vụ: Nhân Viên</p>
                            <i class="far fa-edit mb-5"></i>
                        </div>
                        <div class="col-md-8 text-white">
                            <div class="card-body p-4">
                                <h6>Thông tin chi tiết:</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6 class="text-bg-dark">Ngày Sinh</h6>
                                        <p class="text-white-50">@Html.DisplayFor(model => model.NgaySinh)</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6 class="text-bg-dark">Số Điện Thoại</h6>
                                        <p class="text-white-50">@Html.DisplayFor(model => model.SoDienThoai)</p>
                                    </div>
                                </div>

                                <hr class="mt-0 mb-4">

                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6 class="text-bg-dark">Giới Tính</h6>
                                        <p class="text-white-50">
                                            @{if (Model.GioiTinh == true)
                                                { gtinh = "Nam"; }
                                                else
                                                { gtinh = "Nữ"; }
                                            }@gtinh
                                        </p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6 class="text-bg-dark">Địa Chỉ</h6>
                                        <p class="text-white-50">@Html.DisplayFor(model => model.DiaChi)</p>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-start">
                                    <a href="#!"><i class="fab fa-facebook-f fa-lg me-3"></i></a>
                                    <a href="#!"><i class="fab fa-twitter fa-lg me-3"></i></a>
                                    <a href="#!"><i class="fab fa-instagram fa-lg"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.NhanVienID }, new { @class = "btn btn-success" }) |
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</p>
