@model IEnumerable<_23TH2508_Final_Project.Models.NhanVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string gtinh = "";
    int i = 0;
}

<h2>Trang chủ quản lý Nhân Viên</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table align-middle mb-0 bg-white">
    <thead class="bg-light">
        <tr>
            <th>Họ & Tên</th>
            <th>Ngày Sinh</th>
            <th>Số Điện Thoại</th>
            <th>Địa Chỉ</th>
            <th>Actions</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    <div class="d-flex align-items-center">
                        <img src="/Images/@Html.DisplayFor(modelItem => item.AnhNV)"
                             alt=""
                             style="width: 85px; height: 85px"
                             class="rounded-circle" />
                        <div class="ms-3">
                            <p class="fw-bold mb-1">@Html.DisplayFor(modelItem => item.HoTen)</p>
                            <p class="text-muted mb-0">
                                @{
                                    if (item.GioiTinh == true)
                                    { gtinh = "Nam"; }
                                    else
                                    { gtinh = "Nữ"; }
                                }
                                @gtinh
                            </p>
                        </div>
                    </div>
                </td>
                <td>
                    <p class="fw-normal mb-1">@Html.DisplayFor(modelItem => item.NgaySinhString)</p>
                </td>
                <td>@Html.DisplayFor(modelItem => item.SoDienThoai)</td>
                <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.NhanVienID }, new { @class = "btn btn-secondary" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.NhanVienID }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.NhanVienID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        </tbody>
    }
</table>

<div class="d-flex justify-content-between align-items-center">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @for (int pageIndex = 1; pageIndex <= ViewBag.TotalPages; pageIndex++)
            {
                <li class="page-item @(pageIndex == ViewBag.CurrentPage ? "active" : "")">
                    @Html.ActionLink(pageIndex.ToString(), "Index", new { page = pageIndex }, new { @class = "page-link" })
                </li>
            }
        </ul>
    </nav>
</div>
