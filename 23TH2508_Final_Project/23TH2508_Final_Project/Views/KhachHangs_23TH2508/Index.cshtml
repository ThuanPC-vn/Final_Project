@model IEnumerable<_23TH2508_Final_Project.Models.KhachHang>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Trang chủ quản lý khách hàng</h2>

<p>
	@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.HoTen)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.SoDienThoai)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.DiaChi)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.HoTen)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.SoDienThoai)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.DiaChi)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id=item.KhachHangID }, new { @class = "btn btn-secondary" }) |
				@Html.ActionLink("Details", "Details", new { id=item.KhachHangID }, new { @class = "btn btn-info" }) |
				@Html.ActionLink("Delete", "Delete", new { id=item.KhachHangID }, new { @class = "btn btn-danger" })
			</td>
		</tr>
	}

</table>
